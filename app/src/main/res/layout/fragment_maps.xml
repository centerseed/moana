<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.moana.carsharing.map.MapsFragment" />

    <FrameLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        app:behavior_hideable="true"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_mylocation"
        android:id="@+id/fabLocalize"
        android:layout_gravity="top|right"
        android:tint="@android:color/black"
        android:alpha="1"
        app:backgroundTint="#fafafa"
        app:useCompatPadding="true"
        app:fabSize="normal"
        app:elevation="16dp"
        app:borderWidth="1dp"
        app:layout_anchor="@id/bottom_sheet"
        app:layout_anchorGravity="right|top" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@mipmap/ic_traffic_white_24dp"
        android:id="@+id/fab_traffic"
        android:tint="@android:color/black"
        android:alpha="1"
        app:backgroundTint="#fafafa"
        app:useCompatPadding="true"
        app:fabSize="normal"
        app:elevation="16dp"
        app:borderWidth="1dp"
        app:layout_anchor="@id/fabLocalize"
        app:layout_anchorGravity="right|top" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@mipmap/ic_directions_car_white_24dp"
        app:layout_anchor="@id/bottom_sheet"
        app:layout_anchorGravity="right|top"
        app:useCompatPadding="true"
        app:elevation="16dp"
        android:id="@+id/fabNavigation" />

</android.support.design.widget.CoordinatorLayout>
